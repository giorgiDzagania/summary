<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="Enter Anagram"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_accent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintStart_toStartOf="@id/editText"
        app:layout_constraintEnd_toEndOf="@id/editText"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="output"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="@id/btnSave"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnOutput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Input Count"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/inputCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textOutput"
        app:layout_constraintTop_toTopOf="@id/textOutput"
        app:layout_constraintBottom_toBottomOf="@id/textOutput"
        android:text="0"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/anagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textOutput"
        app:layout_constraintStart_toStartOf="@id/textOutput"
        app:layout_constraintEnd_toEndOf="@id/textOutput"
        android:layout_marginTop="20dp"
        android:text="Anagram Count"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/anagramCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/anagram"
        app:layout_constraintTop_toTopOf="@id/anagram"
        app:layout_constraintBottom_toBottomOf="@id/anagram"
        android:text="0"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>